<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wongis.catalogger">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.wongis.catalogger.InventoryList"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.wongis.catalogger.CreateInventory"
            android:windowSoftInputMode="stateHidden"
            />

        <activity android:name="com.wongis.catalogger.AddItems"
            android:windowSoftInputMode="stateHidden"
            />
        <activity
            android:name="com.wongis.catalogger.InventoryViewer"
            android:label="@string/title_activity_inventory_viewer"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>